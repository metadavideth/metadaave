{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://farcaster.xyz https://wallet.farcaster.xyz;"
        },
        {
          "key": "X-Frame-Options",
          "value": "ALLOW-FROM https://farcaster.xyz"
        }
      ]
    }
  ]
}
